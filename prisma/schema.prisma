generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ClickLog {
  id String @id @default(cuid()) @map("_id")

  shortKey    String
  ipAddress   String
  country     String?
  countryCode String?
  userAgent   String?
  shortUrl    ShortUrl @relation(fields: [shortKey], references: [shortKey], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model ShortUrl {
  id String @id @default(cuid()) @map("_id")

  shortKey    String @unique
  originalUrl String
  clicks      Int    @default(0)

  clickLogs ClickLog[]

  guestId String?
  userId  String? // null = guest
  user    User?   @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  expiresAt DateTime?
}

model User {
  id String @id @default(cuid()) @map("_id")

  name         String
  picture      String?
  email        String  @unique
  password     String?
  provider     String? // e.g., 'google', 'credentials'
  subscription Boolean @default(false)

  shortUrls ShortUrl[]
  token     Token[]
  textShares TextShare[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Token {
  id String @id @default(cuid()) @map("_id")

  token     String   @unique
  type      String // 'auth' | 'reset' | etc.
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime

  createdAt DateTime @default(now())
}

model TextShare {
  id String @id @default(cuid()) @map("_id")

  shortKey       String   @unique
  title          String?
  content        String
  format         String   @default("plain") // 'plain' | 'markdown' | 'code'
  syntaxLanguage String?  // e.g., 'javascript', 'python', 'typescript'

  passwordHash   String?  // Optional password protection
  expiresAt      DateTime? // Optional expiration
  viewLimit      Int?     // Optional view limit (null = unlimited)
  viewCount      Int      @default(0)

  isPublic       Boolean  @default(true)
  customSlug     String?  @unique // Optional user-defined slug

  guestId        String?
  userId         String?
  user           User?    @relation(fields: [userId], references: [id])

  viewLogs       TextShareViewLog[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}

model TextShareViewLog {
  id String @id @default(cuid()) @map("_id")

  textShareId String
  textShare   TextShare @relation(fields: [textShareId], references: [id], onDelete: Cascade)

  ipAddress   String
  country     String?
  countryCode String?
  userAgent   String?

  accessedAt  DateTime @default(now())
}
