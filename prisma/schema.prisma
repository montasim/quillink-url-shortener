generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Subscription tiers
enum SubscriptionTier {
  GUEST
  FREE
  PREMIUM
}

model ClickLog {
  id String @id @default(cuid()) @map("_id")

  shortKey    String
  ipAddress   String
  country     String?
  countryCode String?
  userAgent   String?
  shortUrl    ShortUrl @relation(fields: [shortKey], references: [shortKey], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model ShortUrl {
  id String @id @default(cuid()) @map("_id")

  shortKey    String @unique
  originalUrl String
  clicks      Int    @default(0)

  clickLogs ClickLog[]

  guestId String?
  userId  String? // null = guest
  user    User?   @relation(fields: [userId], references: [id])

  // Premium features
  passwordHash String?  // Password protection (Premium)
  expiresAt    DateTime? // Link expiration (Premium)
  customSlug   String?  // Custom slug (All tiers) - uniqueness handled in app code

  createdAt DateTime @default(now())
}

model User {
  id String @id @default(cuid()) @map("_id")

  name         String
  picture      String?
  email        String  @unique
  password     String?
  provider     String? // e.g., 'google', 'credentials'

  // Subscription management
  subscriptionTier    SubscriptionTier @default(FREE)
  subscriptionActive  Boolean          @default(false)
  subscriptionStartedAt DateTime?
  subscriptionExpiresAt DateTime?
  stripeCustomerId  String? // Stripe customer ID for payment processing

  shortUrls ShortUrl[]
  token     Token[]
  textShares TextShare[]
  usage     Usage[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Token {
  id String @id @default(cuid()) @map("_id")

  token     String   @unique
  type      String // 'auth' | 'reset' | etc.
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime

  createdAt DateTime @default(now())
}

model TextShare {
  id String @id @default(cuid()) @map("_id")

  shortKey       String   @unique
  title          String?
  content        String
  format         String   @default("plain") // 'plain' | 'markdown' | 'code'
  syntaxLanguage String?  // e.g., 'javascript', 'python', 'typescript'

  passwordHash   String?  // Optional password protection
  expiresAt      DateTime? // Optional expiration
  viewLimit      Int?     // Optional view limit (null = unlimited)
  viewCount      Int      @default(0)

  isPublic       Boolean  @default(true)
  customSlug     String?  // Optional user-defined slug - uniqueness handled in app code

  guestId        String?
  userId         String?
  user           User?    @relation(fields: [userId], references: [id])

  viewLogs       TextShareViewLog[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}

model TextShareViewLog {
  id String @id @default(cuid()) @map("_id")

  textShareId String
  textShare   TextShare @relation(fields: [textShareId], references: [id], onDelete: Cascade)

  ipAddress   String
  country     String?
  countryCode String?
  userAgent   String?

  accessedAt  DateTime @default(now())
}

// Usage tracking for rate limiting and feature access
model Usage {
  id String @id @default(cuid()) @map("_id")

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Feature usage tracking
  urlsCreated       Int @default(0)
  textSharesCreated Int @default(0)
  apiCalls          Int @default(0)
  qrCodesGenerated  Int @default(0)

  // Rate limiting
  lastApiCall       DateTime?
  lastUrlCreation   DateTime?
  lastTextShare     DateTime?

  // Reset period
  periodStart       DateTime @default(now())
  periodEnd         DateTime? // null = rolling window

  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
}
